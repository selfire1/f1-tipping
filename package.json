{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "bun run scripts/save-avatars.ts",
    "build": "GIT_COMMIT=`git log -1 --pretty='%aD %B'` nuxt build",
    "dev": "GIT_COMMIT=`git log -1 --pretty='%aD %B'` nuxt dev",
    "dev:staging": "nuxt dev --dotenv .env.staging",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "db:generate": "drizzle-kit generate",
    "db:generate:staging": "bun --env-file=.env.staging run db:generate",
    "db:migrate:staging": "bun --env-file=.env.staging run db:migrate",
    "db:push:staging": "bun --env-file=.env.staging run db:push",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun run ./server/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:dump": "turso db shell f1-tipping .dump > dump.sql && rm local.db && cat dump.sql | sqlite3 local.db",
    "www:prod": "open 'https://dash.cloudflare.com/4d5f60f30043f65cd1964f903d344b72/pages/view/f1-tipping'",
    "save-images": "bun run scripts/save-avatars.ts"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@libsql/kysely-libsql": "^0.4.1",
    "@nuxt/fonts": "0.10.3",
    "@nuxt/icon": "^1.10.3",
    "@nuxt/image": "^1.9.0",
    "@nuxt/ui": "2.21.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@vueuse/core": "^12.7.0",
    "@vueuse/router": "^12.7.0",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.1.21",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "nuxt": "^3.16.0",
    "pug": "^3.0.3",
    "vue": "latest",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.2.8",
    "@nuxt/eslint-config": "^0.6.2",
    "@prettier/plugin-pug": "^3.2.1",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bun": "^1.2.6",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@vue/language-plugin-pug": "^2.2.2",
    "drizzle-kit": "^0.30.5",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "^5.7.3"
  }
}
